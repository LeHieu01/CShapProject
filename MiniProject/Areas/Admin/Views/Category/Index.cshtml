@model IEnumerable<Category> 
@{
    ViewData["Title"] = "Index";
}

<partial name="_Notification" />

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary ml-0 py-3">
        <div class="row">
            <div class="col-6">
                <h2 class="text-primary-emphasis py-2">Category list</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Category" asp-action="Create" class="btn btn-outline-primary"><i class="bi bi-plus-circle-fill pe-1"></i>New</a>
            </div>
        </div>
        <div class="card-body p-4">
            <table class="table table-bordered table-striped rounded rounded-3 overflow-hidden" style="width: 100%;">
                <thead>
                    <tr class="table-dark">
                        <th>
                            Category Name
                        </th>
                        <th>
                            Display Order
                        </th>
                        <th style="width: 30%"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr>
                            <td>
                                @obj.Name
                            </td>
                            <td>
                                @obj.DisplayOrder
                            </td>
                            <td>
                                <div class="category-btn" style="display: flex; justify-content: center; align-items: center;">
                                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-light mx-2 align-items-center">
                                        <i class="bi bi-pen"></i> Edit 
                                    </a>
                                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2 align-items-center">
                                        <i class="bi bi-trash"></i> Delete 
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>
