@model Category

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary-emphasis py-2">Create Category</h2>
            </div>
        </div>
        <div class="card-body p-4">
            <form method="post">
                <div class="row mb-3">
                    <div asp-validation-summary="All"></div>
                    <div class="col-md-6">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>

                    </div>
                    <div class="col-md-6">
                        <label asp-for="DisplayOrder"></label>
                        <input asp-for="DisplayOrder" class="form-control" />
                        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                    </div>
                </div>
                <div class="row pt-2">
                    <div class="col-12">
                        <div class="d-flex justify-content-end">
                            <button class="btn btn-outline-success" style="margin-right: 10px;" >Update</button>
                            <a asp-controller="Category" asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}