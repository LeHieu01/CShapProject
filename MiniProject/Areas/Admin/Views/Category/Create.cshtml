@model Category

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary-emphasis py-2">Edit Category</h2>
            </div>
        </div>
        <div class="card-body p-4">
            <form method="post">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="Name" class="form-label" style="background-color: transparent;">Name</label>
                        <input type="text" class="form-control" id="Name" name="Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label for="DisplayOrder" class="form-label">Display Order</label>
                        <input type="number" class="form-control" id="DisplayOrder" name="DisplayOrder" />
                        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                    </div>
                </div>

                <div class="row pt-2">
                    <div class="col-12">
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-outline-success" style="margin-right: 10px;">Save</button>
                            <a asp-controller="Category" asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>




@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
