@model Product;

<form method="post">
    <a asp-action="Index" type="button" class="btn btn-outline-primary mt-4">Back to home</a>
    <div class="card shadow border-0 mt-4">
        <div class="card-header text-white bg-dark mb-3 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h3 class="text-white text-uppercase">@Model.Title</h3>
                    <p class="text-white-50 fw-semibold mb-0">@Model.Author</p>
                </div>
            </div>
        </div>
        <div class="card-body">
            @*             <div class="py-3">
            <div class="row">
            <div class="col-6 col-md-2 offset-lg-1 pb-1">
            <a class="btn btn-outline-primary bg-gradient mb-5 fw-semibold btn-sm text-uppercase">
            <small>Back to home</small>
            </a>
            </div>
            </div> *@
            <div class="row">
                <div class="col-12 col-lg-3 offset-lg-1 text-center mb-3">
                    <img src=@Model.Image width="100%" class="rounded" />
                </div>
                <div class="col-12 col-lg-6 offset-lg-1">

                    <div class="col-12 col-md-6 pb-4">
                        <span class="badge rounded-pill bg-primary m-1">@Model.Category.Name</span>
                    </div>
                    <div class="row ps-2">
                        <h6 class="text-dark ">ISBN : @Model.ISBN</h6>
                    </div>
                    <div class="row ps-2">
                        <h6 class="text-dark   pb-2">
                            List Price:
                            <span class="text-decoration-line-through">
                                @(Model.ListPrice).000Vnđ
                            </span>
                        </h6>
                    </div>
                    <div class="row text-center ps-2 pt-2">
                        <div class="p-1 col-3 col-lg-2 bg-white border-bottom">
                            <div class="text-dark fw-semibold">Quantity</div>
                        </div>
                        <div class="p-1 col-3 col-lg-2 bg-white border-bottom">
                            <div class="text-dark fw-semibold">1-50</div>
                        </div>
                        <div class="p-1 col-3 col-lg-2 bg-white border-bottom">
                            <div class="text-dark fw-semibold">51-100</div>
                        </div>
                        <div class="p-1 col-3 col-lg-2 bg-white border-bottom">
                            <div class="text-dark fw-semibold">100+</div>
                        </div>
                    </div>
                    <div class="row text-center ps-2">
                        <div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold">
                            <div>Price (vnđ)</div>
                        </div>
                        <div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold">
                            <div>@(Model.Price).000</div>
                        </div>
                        <div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold">
                            <div>@(Model.Price50).000</div>
                        </div>
                        <div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold">
                            <div>@(Model.Price100).000</div>
                        </div>
                    </div>
                    <div class="row pl-2 mb-3 pt-4">
                        <div class="col-md-5">
                            <div class="input-group mb-3">
                                <span class="input-group-text bg-primary text-white border-0 fw-semibold"
                                      id="inputGroup-sizing-default">
                                    Count
                                </span>
                                <input type="number" value="1" min="1" max="500" class="form-control text-center border-2"
                                       aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 col-md-6 pb-1">
                                <button type="submit" disabled
                                        class="btn btn-primary bg-gradient  w-100 py-2 text-uppercase fw-semibold">
                                    Add to Cart (Comming Soon...)
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="shadow my-4">
        <ul class="nav nav-tabs pt-2 px-3" role="tablist">
            <li class="nav-item" role="presentation">
                <a class="nav-link active" data-bs-toggle="tab" href="#home" aria-selected="false" role="tab" tabindex="-1">Description</a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link" data-bs-toggle="tab" href="#profile" aria-selected="true" role="tab">
                    Review this product
                </a>
            </li>
        </ul>
        <div id="myTabContent" class="tab-content px-4 pt-3 pb-4">
            <div class="tab-pane fade show active" id="home" role="tabpanel">
                <p>@Html.Raw(Model.Description)</p>
            </div>
            <div class="tab-pane fade show" id="profile" role="tabpanel">
                <p>(Comming Soon...)</p>
            </div>
        </div>
    </div>

</form>
